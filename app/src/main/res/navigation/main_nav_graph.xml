<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.navigation_1.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_studentsFragment"
            app:destination="@id/studentsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profilesFragment"
            app:destination="@id/profilesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profilesFragment"
        android:name="com.example.navigation_1.ProfilesFragment"
        android:label="fragment_profiles"
        tools:layout="@layout/fragment_profiles" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.navigation_1.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/studentsFragment"
        android:name="com.example.navigation_1.StudentsFragment"
        android:label="fragment_students"
        tools:layout="@layout/fragment_students" />
</navigation>